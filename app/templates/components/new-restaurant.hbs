
<div class="page-header">
  <h4><strong>Registra tu Restaurante</strong></h4>
</div>
<div id="root" align="center">
  <form id="form-register-restaurant" class="form-horizontal" {{action 'updateSystem' on="submit"}}>
      <div class="errors-container" id="errors"></div>
      <div class="form-group  {{if changeset.error.name_restaurant 'has-error'}}">
        <p>Nombre de Restaurante</p>
        {{input placeholder="Ej: Taquitos" class="form-control" value=changeset.name_restaurant}}
        {{#if changeset.error.name_restaurant}}
        <span class="help-block">{{changeset.error.name_restaurant.validation}}</span>
        {{/if}}
      </div>
      <div class="form-group {{if changeset.error.email 'has-error'}} ">
        <p>Correo Electronico</p>
        {{input placeholder="Ej. taquitos@taquitos.com" class="form-control" value=changeset.email}}
        {{#if changeset.error.email}}
        <span class="help-block">{{changeset.error.email.validation}}</span>
        {{/if}}
      </div>
      <div class="form-group {{if changeset.error.description 'has-error'}}">
        <p>Descripci√≥n</p>
        {{textarea placeholder="Ej. Comida mexicana de excelente sabor y calidad" class="form-control" value=changeset.description}}
        {{#if changeset.error.description}}
        <span class="help-block">{{changeset.error.description.validation}}</span>
        {{/if}}
      </div>
      <div class="form-group  {{if changeset.error.admin 'has-error'}}">
        <p>Administrador</p>
        {{textarea placeholder="Id del admin" class="form-control" value=changeset.admin}}
        {{#if changeset.error.admin}}
        <span class="help-block">{{changeset.error.admin.validation}}</span>
        {{/if}}
      </div>
      <button class=" btn btn-primary btn-lg" {{action 'save'}}>Registrar</button>
      <button class=" btn btn-primary btn-lg" {{action 'rollback'}}>Cancelar</button>
  </form>
</div>
{{outlet}}
